{
  "name": "@ngify/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "docs": "typedoc",
    "build": "nx run-many --target=build,postbuild",
    "test": "nx run-many --target=test",
    "test:watch": "nx run-many --target=test --code-coverage --watch",
    "test:coverage": "nx run-many --target=test --code-coverage",
    "lint": "nx run-many --target=lint",
    "affected": "nx affected -t lint test build",
    "release": "export npm_config_legacy_peer_deps=false && nx release",
    "prepare": "husky"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nx/eslint": "20.0.7",
    "@nx/eslint-plugin": "20.0.7",
    "@nx/js": "20.0.7",
    "@nx/vite": "20.0.7",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "18.16.9",
    "@vitest/coverage-v8": "^1.0.4",
    "@vitest/ui": "^1.3.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.0.0",
    "fs-extra": "^11.2.0",
    "husky": "^9.1.6",
    "nx": "20.0.7",
    "prettier": "^3.0.0",
    "tslib": "^2.3.0",
    "typedoc": "^0.26.11",
    "typescript": "~5.5.2",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.3.1"
  }
}
