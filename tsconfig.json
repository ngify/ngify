{
  "include": [
    "packages/*/src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*.spec.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@ngify/*": [
        "packages/*"
      ]
    },
    "removeComments": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "references": []
}